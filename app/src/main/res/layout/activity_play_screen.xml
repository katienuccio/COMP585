<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katherinenuccio.RoomHunt.PlayScreen">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nearest Beacon:"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="265dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.507" />

    <TextView
        android:id="@+id/roomName"
        android:layout_width="163dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/beach_button"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:text="BEACH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/forest_button"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_below="@+id/beach_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="FOREST"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beach_button" />

    <Button
        android:id="@+id/mountain_button"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_below="@+id/forest_button"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="MOUNTAIN"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/town_button"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_below="@+id/mountain_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="TOWN"
        app:layout_constraintTop_toBottomOf="@+id/mountain_button"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="320dp"
        android:layout_height="143dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="25dp"
        android:text="Instructions: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomName" />

</android.support.constraint.ConstraintLayout>
