<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.katherinenuccio.RoomHunt.PlayScreen">

    <TextView
        android:id="@+id/roomName"
        android:layout_width="132dp"
        android:layout_height="78dp"
        android:ems="10"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:text="Room Name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/beach_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEACH"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/forest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOREST"
        android:layout_below="@+id/beach_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/beach_button" />
    <Button
        android:id="@+id/mountain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOUNTAIN"
        android:layout_below="@+id/forest_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/forest_button" />
    <Button
        android:id="@+id/town_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOWN"
        android:layout_below="@+id/mountain_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/forest_button"
        android:layout_marginLeft="145dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
